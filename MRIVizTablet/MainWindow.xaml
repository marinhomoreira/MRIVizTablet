<Window x:Class="MRIVizTablet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MRIViz M V" WindowState="Maximized"
        Height="1000" Width="750">
    <Grid Background="Black" TouchDown="changeAppState">
        <Canvas Height="5000" Width="5000" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image Name="image" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="0" Canvas.Top="0" Height="1536" />
        </Canvas>
        <TextBlock Name="tapToChangeStatus" Text="Tap on screen to freeze image." Foreground="White" />
        <TextBlock Name="appStatus" Text="False" Foreground="White" HorizontalAlignment="Right" />
        <!--<Button Click="changeApplicationState" x:Name="Pause" Height="20" Width="50" Content="Pause" Margin="10,21,682,928"></Button>-->
    </Grid>
</Window>
