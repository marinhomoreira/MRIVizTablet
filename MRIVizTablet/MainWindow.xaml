<Window x:Class="MRIVizTablet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MRIViz M V" WindowState="Maximized"
        Height="750">
    <Grid Background="Black" TouchDown="changeAppState">

        <ScrollViewer
            Name="scroll"            
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden"
            
            >
            <Image Name="image" Height="1536" Width="1536" VerticalAlignment="Center" HorizontalAlignment="Center" />
            
        </ScrollViewer>
        
        <TextBlock Name="tapToChangeStatus" Text="Tap on screen to freeze image." Foreground="White" />
        <TextBlock Name="appStatus" Text="False" Foreground="White" HorizontalAlignment="Right" />
    
        <!--<Button Background="Aqua" Click="changeImageSize" x:Name="Factors" Height="20" Width="50" Content="2x" Margin="19,25,691,674"></Button>-->

    </Grid>
</Window>
